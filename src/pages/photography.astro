---
title: 'Photography';

import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import PhotoCarousel from '../components/PhotoCarousel.svelte';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

import { Image } from 'astro:assets';

import HelluvaBoss from '../../src/images/cosplay/COMICSSALON23-03.jpg';
import GuiltyGear from '../../src/images/cosplay/COMICSSALON23-09.jpg';
import Lucy from '../../src/images/cosplay/COMICSSALON23-14.jpg';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main>
			<section class="mx-auto max-w-6xl p-8">
				<h1 class="scroll-m-20 text-4xl font-extrabold tracking-tight lg:text-5xl">Photography</h1>
				<p class="mb-4 leading-7 [&:not(:first-child)]:mt-6">
					I take mostly landscape and cosplay photography photos. Here you will find some of my
					recent work.
				</p>

				<h2
					class="scroll-m-20 border-b pb-2 text-3xl font-semibold tracking-tight transition-colors first:mt-0"
				>
					Cosplay
				</h2>

				<PhotoCarousel client:load>
					<Image src={HelluvaBoss} alt="Helluva Boss" quality={30} class={'w-1/3 p-2'} />
					<Image src={GuiltyGear} alt="Guilty Gear" quality={30} class={'w-1/3 p-2'} />
					<Image src={Lucy} alt="Helluva Boss" quality={30} class={'w-1/3 p-2'} />
				</PhotoCarousel>
			</section>

			<Footer />
		</main>
	</body>
</html>
