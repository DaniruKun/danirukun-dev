---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE, SOCIALS } from '../consts';
import SocialsBar from './SocialsBar.svelte';

const { twitter, github } = SOCIALS;
---

<header class="m-0 bg-white px-2 py-0 shadow-md">
	<nav class="flex items-center justify-between">
		<h2 class="text-base site-logo"><a href="/" class="font-semibold">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<!-- <HeaderLink href="/about">About</HeaderLink> -->
			<HeaderLink href="/portfolio">Portfolio</HeaderLink>
			<HeaderLink href="/uses">Computing</HeaderLink>
			<HeaderLink href="/credits">Credits</HeaderLink>
		</div>
		<div class="social-links flex">
			<SocialsBar socials={{twitter, github}}></SocialsBar>
		</div>
	</nav>
</header>
<style>
	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav a {
		padding: 0.5em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	@media (max-width: 720px) {
		.social-links, .site-logo {
			display: none;
		}
	}
</style>
